                                Academic Year Name:<br>
                                <div class="author_name bg-white p-3 mb-2 rounded">
                                    @Html.DisplayFor(model => model.AcademicYears)
                                </div>
                            </p>
                        </div>
                        <div class="last_modified ps-4">
                            <p class="d-block p-2 fs-5 text fw-bold">
                                Start Date: <br>
                                <div class="date_time_modified bg-white p-3 mb-2 rounded">
                                    @Html.DisplayFor(model => model.StartDate)
                                </div>
                            </p>
                        </div>
                        <div class="last_modified ps-4">
                            <p class="d-block p-2 fs-5 text fw-bold">
                                Closure Date: <br>
                                <div class="date_time_modified bg-white p-3 mb-2 rounded">
                                    @Html.DisplayFor(model => model.ClosureDate)
                                </div>
                            </p>
                        </div>
                        <div class="btn_group ps-4 mt-5 d-flex">

                            <form asp-action="AcademicYearDelete">
                                <input type="hidden" asp-for="AcademicYearID" />
                                <button type="submit" class="btn btn-outline-danger btn-lg me-3" value="Delete" class="btn btn-danger"> Delete </button>
                            </form>
                            <a asp-action="AcademicYears" type="button"
                               class="btn btn-outline-secondary btn-lg">Back to List</a>

                        </div>
