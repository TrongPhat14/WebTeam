                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
 <script>
    // Hàm JavaScript để tạo mật khẩu ngẫu nhiên và cập nhật giá trị của input hidden khi trang được tải
    document.addEventListener("DOMContentLoaded", function() {
        generateRandomPassword();
    });

    // Hàm JavaScript để tạo mật khẩu ngẫu nhiên và cập nhật giá trị của input hidden
    function generateRandomPassword() {
        var length = 10; // Độ dài mật khẩu, bạn có thể thay đổi nếu cần
        var charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!#$%^&*()_-+=<>?";
        var password = "";
        for (var i = 0; i < length; i++) {
            password += charset.charAt(Math.floor(Math.random() * charset.length));
        }
        // Cập nhật giá trị của input hidden
        document.getElementById("randomPassword").value = password;
        // Cập nhật giá trị của input text để hiển thị mật khẩu
        document.getElementById("myInput").value = password;
    }
</script>


